â €â €â €â ¸â£¿â£¿â£¿â£¿â£¿â£¿â£¿â£¿â£¿â£Ÿâ£‹â£â£¤â£€â£€â£¤â£¤â£¤â£¤â£„â£¿â¡„â €â €â €â €
â €â €â €â €â ™â ¿â£¿â£¿â£¿â£¿â£¿â£¿â£¿â¡¿â ¿â ›â ‹â ‰â â €â €â €â €â ˆâ ›â ƒâ €â €â €â €
â €â €â €â €â €â €â €â ‰â ‰â ‰â ‰â ‰â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €`;

// ASCII fallback for terminals without Unicode (like Raspberry Pi)
const KITSUNE_ASCII = `
        /\\___/\\
       (  o o  )
       (  =^=  ) 
        )     (
       (       )
      ( KITSUNE )
       (       )
        \\_____/
    JOS // AI Agent`;

const getKitsuneBanner = () => {
    const color = randomAurora();
    const fox = supportsUnicode() ? KITSUNE_UNICODE : KITSUNE_ASCII;
    return `${color}${fox}${C.reset}
                            ${C.dim}Made with <3 & AI${C.reset}`;
};

const ALIASES = {
    server: 'serve',
    'enable-josfox-internet': 'enable-JOSFOX-internet',
    'josfox-internet': 'enable-JOSFOX-internet',
    'internet': 'enable-JOSFOX-internet'
};

const rawCmd = process.argv[2];
const cmd = ALIASES[rawCmd?.toLowerCase()] || rawCmd;

if (!cmd || cmd === '--help' || cmd === '-h') {
    console.log(getKitsuneBanner());
    console.log(`\n${C.purple}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${C.reset}`);
    console.log(`  ${C.white}${C.bold}JOS-CLI${C.reset} ${C.cyan}v1.0.8${C.reset} ${C.gray}// Stoic Kernel${C.reset}`);
    console.log(`  ${C.dim}Format version v0.0.7 â€” Specification maturity v0.1.0 (Alpha)${C.reset}`);
    console.log(`${C.purple}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${C.reset}`);
    console.log(`\n${C.white}${C.bold}  Usage:${C.reset} ${C.cyan}jos-cli${C.reset} ${C.gray}<command>${C.reset} ${C.dim}[options]${C.reset}\n`);
    console.log(`${C.white}${C.bold}  Commands:${C.reset}`);
    console.log(`    ${C.green}enable-JOSFOX-internet${C.reset}  ${C.gray}Set up captive portal on supported routers${C.reset}`);
    console.log(`    ${C.cyan}serve${C.reset}                   ${C.gray}Start local development server${C.reset}`);
    console.log(`    ${C.magenta}secrets${C.reset}                 ${C.gray}Manage encrypted credentials${C.reset}`);
    console.log(`    ${C.blue}get${C.reset}                     ${C.gray}Fetch packages from repos${C.reset}`);
    console.log(`    ${C.purple}run${C.reset}                     ${C.gray}Execute .jos artifacts${C.reset}\n`);
    console.log(`${C.white}${C.bold}  JOSFOX Internet:${C.reset}`);
    console.log(`    ${C.dim}Transform your WiFi router into a monetizable captive portal${C.reset}`);
    console.log(`    ${C.dim}Supports GL.iNet routers (Mango, Shadow, Slate)${C.reset}\n`);
    console.log(`${C.dim}  Run ${C.cyan}jos-cli <cmd> --help${C.reset}${C.dim} for command-specific options${C.reset}\n`);
    process.exit(0);
}

// Look for command in multiple locations (priority order)
const PKG_COMMANDS = path.join(__dirname, '..', 'src', 'commands');
const USER_COMMANDS = path.join(JOS_HOME, 'commands');

function findCommand(name) {
    // 1. Check user's ~/.jos/commands first (allows overrides)
    const userPath = path.join(USER_COMMANDS, name, 'index.js');
    if (fs.existsSync(userPath)) return userPath;

    // 2. Check user commands with .js extension
    const userPathJs = path.join(USER_COMMANDS, `${name}.js`);
    if (fs.existsSync(userPathJs)) return userPathJs;

    // 3. Check npm package src/commands
    const pkgPath = path.join(PKG_COMMANDS, `${name}.js`);
    if (fs.existsSync(pkgPath)) return pkgPath;

    // 4. Check npm package src/ directly (for serve.js)
    const srcPath = path.join(__dirname, '..', 'src', `${name}.js`);
    if (fs.existsSync(srcPath)) return srcPath;

    return null;
}

const cmdPath = findCommand(cmd);
if (!cmdPath) {
    const color = randomAurora();
    console.log(`\n${color}  âœ–${C.reset} ${C.white}Unknown command:${C.reset} ${C.cyan}${rawCmd}${C.reset}`);
    console.log(`${C.dim}    Try: ${C.cyan}jos-cli --help${C.reset}${C.dim} to see available commands${C.reset}\n`);
    process.exit(1);
}

// Execute command
require(cmdPath).execute(process.argv.slice(3), JOS_HOME, { C, supportsUnicode, supports256Color });
