{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://josfox.ai/jos.schema.json",
  "title": ".jos",
  "type": "object",
  "required": [
    "version",
    "id",
    "pipeline"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-_]{2,64}$"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "compat": {
      "type": "object",
      "properties": {
        "models": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "inputs": {
      "type": "object",
      "additionalProperties": true
    },
    "policy": {
      "type": "object",
      "properties": {
        "token_budget": {
          "type": "object",
          "properties": {
            "prompt_max": {
              "type": "integer",
              "minimum": 1
            },
            "total_max": {
              "type": "integer",
              "minimum": 1
            },
            "hard_fail": {
              "type": "boolean"
            }
          },
          "required": [
            "total_max"
          ]
        },
        "guards": {
          "type": "object",
          "properties": {
            "max_steps": {
              "type": "integer",
              "minimum": 1
            },
            "max_runtime_s": {
              "type": "integer",
              "minimum": 1
            },
            "retry": {
              "type": "object",
              "properties": {
                "max": {
                  "type": "integer",
                  "minimum": 0
                },
                "backoff": {
                  "type": "string"
                }
              },
              "required": [
                "max"
              ]
            },
            "retrieval_required": {
              "type": "boolean"
            }
          }
        },
        "pii_scrub": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "signing": {
      "type": "object",
      "properties": {
        "hash": {
          "type": "string",
          "enum": [
            "sha256"
          ]
        },
        "value": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      }
    },
    "pipeline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "role"
        ],
        "properties": {
          "role": {
            "type": "string"
          },
          "model": {
            "type": [
              "string",
              "null"
            ]
          },
          "prompt": {
            "type": [
              "string",
              "null"
            ]
          },
          "tool_call": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "inputs": {
            "type": [
              "array",
              "object",
              "null"
            ]
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "when": {
            "type": [
              "string",
              "boolean",
              "null"
            ]
          },
          "config": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": true
    },
    "audit": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}