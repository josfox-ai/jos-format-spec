{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://josfox.ai/jos.schema.v0.1",
  "title": "JOSFOX .jos v0.1",
  "type": "object",
  "required": [
    "schema",
    "id",
    "name",
    "version",
    "meta",
    "prompt",
    "connection",
    "endpoint",
    "dist"
  ],
  "properties": {
    "schema": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "required": [
        "license",
        "owner",
        "languages",
        "status"
      ],
      "properties": {
        "license": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        }
      }
    },
    "prompt": {
      "type": "object",
      "required": [
        "language",
        "max_user_chars",
        "template",
        "variables"
      ],
      "properties": {
        "language": {
          "type": "string"
        },
        "max_user_chars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5000
        },
        "template": {
          "type": "string"
        },
        "variables": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "enum",
                  "boolean"
                ]
              },
              "required": {
                "type": "boolean"
              },
              "values": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "default": {}
            },
            "required": [
              "type"
            ]
          }
        },
        "constraints": {
          "type": "object",
          "properties": {
            "forbidden_words": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "max_tokens_hint": {
              "type": "integer"
            }
          }
        },
        "computed": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "connection": {
      "type": "object",
      "required": [
        "provider",
        "model",
        "auth"
      ],
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "auth": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string"
            },
            "in": {
              "type": "string"
            }
          },
          "required": [
            "mode",
            "in"
          ]
        },
        "timeouts": {
          "type": "object",
          "properties": {
            "request_ms": {
              "type": "integer"
            }
          }
        }
      }
    },
    "endpoint": {
      "type": "object",
      "properties": {
        "generate_image": {
          "type": "object",
          "required": [
            "method",
            "path"
          ],
          "properties": {
            "method": {
              "type": "string",
              "enum": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH"
              ]
            },
            "path": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "generate_image"
      ]
    },
    "routing": {
      "type": "object"
    },
    "dist": {
      "type": "object",
      "properties": {
        "cacheable": {
          "type": "boolean"
        },
        "signature": {
          "type": "object"
        }
      }
    }
  },
  "additionalProperties": false
}